@model List<Division>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<ul class="custome">
    @foreach (var division in Model)
    {
        <li>
            @division.DivisionName
            <ul>
                @foreach (var district in division.Districts)
                {
                    <li>
                        @district.DistrictName
                        <ul>
                            @foreach (var school in district.Schools)
                            {
                                <li>
                                    @school.SchoolName
                                    <ul>
                                        @{
                                            for (int i = 1; i < 4; i++)
                                            {
                                                var a = @school.Students.Count(s => s.Id == i);
                                                if (i == 1)
                                                {
                                                    <li>Science [@a]</li>
                                                }
                                                if (i == 2)
                                                {
                                                    <li>Arts [@a]</li>
                                                }
                                                if (i == 3)
                                                {
                                                    <li>Commerce [@a]</li>
                                                }
                                            }
                                        }

                                    </ul>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </li>
    }
</ul>
